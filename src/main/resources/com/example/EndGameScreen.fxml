<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="242.0" prefWidth="312.0" style="-fx-background-color: #14213d;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.EndGameController">
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="266.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button fx:id="playAgain" onAction="#playAgain" mnemonicParsing="false" text="Play Again" />
            <Button fx:id="scoreboard" onAction="#displayScoreboard" mnemonicParsing="false" text="Scoreboard" />
          	<Button fx:id="exitToMainMenu" onAction="#exitToMainMenu" mnemonicParsing="false" text="Main Menu" />
        </buttons>
         <padding>
            <Insets bottom="25.0" right="30.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <top>
        <ImageView fx:id="messageImage" fitHeight="102.0" fitWidth="204.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
        </ImageView>
   </top>
   <center>
      <Text fx:id="textScore" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="25.0" />
         </BorderPane.margin>
      </Text>
   </center>
</BorderPane>
